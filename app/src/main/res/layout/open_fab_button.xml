<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabCamera"
        android:layout_width="@dimen/fabButtonSize"
        android:layout_height="@dimen/fabButtonSize"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="80dp"
        android:src="@drawable/ic_camera"
        android:visibility="invisible"
        app:backgroundTint="@color/colorFabButton1" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabGallery"
        android:layout_width="51dp"
        android:layout_height="@dimen/fabButtonSize"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="65dp"
        android:src="@drawable/ic_photo"
        android:visibility="invisible"
        app:backgroundTint="@color/colorFabButton2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabShare"
        android:layout_width="@dimen/fabButtonSize"
        android:layout_height="@dimen/fabButtonSize"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_share"
        android:visibility="invisible"
        app:backgroundTint="@color/colorFabButton3" />

</FrameLayout>